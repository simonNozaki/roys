<% form_with(
  model: get_current_user_or_nil.active_relationships.find_by(followed_id: @user.id),
  html: {
    method: :delete
  },
  local: true
) do |f| %>
  <div>
    <%= hidden_field_tag(:followed_id, @user.id) %>
    <%= f.submit("Unfollow", { class: "btn btn-primary" }) %>
  </div>
<% end %>