<li id="micropost-<%= micropost.id %>">
  <%= link_to get_gravatar(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag(micropost.get_resized_image) if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if micropost.user && micropost.user == get_current_user_or_nil %>
      <%= link_to("delete", micropost, {
        method: :delete,
        data: {
          confirm: "Are you sure?"
        }
      }) %>
    <% end %>
  </span>
</li>